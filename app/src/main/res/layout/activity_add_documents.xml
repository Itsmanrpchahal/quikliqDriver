<?xml version='1.0' encoding='utf-8' ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:id="@+id/parent_payment"
                android:layout_height="match_parent">
    <include layout="@layout/nointernet"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/screendata">

    <ImageView
            android:id="@+id/logo"
            android:background="@drawable/img_marijuana"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"/>
    <TextView
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:id="@+id/paymentInfoText"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:text="Add  Documents"
            android:textAllCaps="true"
            android:layout_below="@+id/logo"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/paymentInfoText"
            android:fillViewport="true">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <LinearLayout
                    android:id="@+id/documentLL"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/margin_20dp"
                    android:background="@drawable/content_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <RelativeLayout
                        android:id="@+id/picture"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:padding="@dimen/dim_10dp"
                        android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/picturetv"
                            android:textSize="22sp"
                            android:textColor="@android:color/black"
                            android:text="Picture"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:background="@android:color/transparent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />


                    <Button
                        android:id="@+id/picturebanner"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="@dimen/dim_10dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/picturetv"
                        android:background="@drawable/layout_bg"
                        android:text="Uploaded"
                        android:textSize="@dimen/text_12sp"
                        android:visibility="gone"
                        android:textAllCaps="false"
                        android:textColor="@color/white">

                    </Button>

                    <ImageView
                            android:id="@+id/pictureIV"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/ic_arrow_forward_black_24dp"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_margin="@dimen/dim_10dp"/>

                </RelativeLayout>
                <View
                        android:background="#ffd3d3d3"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"/>

                <RelativeLayout
                        android:id="@+id/policeVerification"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:padding="@dimen/dim_10dp"
                        android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/policeverificationtv"
                            android:textSize="22sp"
                            android:textColor="@android:color/black"
                            android:text="Police verification"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:background="@android:color/transparent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                    <Button
                        android:id="@+id/policeVerificationbanner"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="@dimen/dim_10dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/policeverificationtv"
                        android:background="@drawable/layout_bg"
                        android:text="Uploaded"
                        android:visibility="gone"
                        android:textAllCaps="false"
                        android:textColor="@color/white">

                    </Button>


                    <ImageView
                            android:id="@+id/policeVerificationIV"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/ic_arrow_forward_black_24dp"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_margin="@dimen/dim_10dp"/>

                </RelativeLayout>
                
               
                <View
                        android:background="#ffd3d3d3"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"/>

                <RelativeLayout
                        android:id="@+id/driverliscense"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:padding="@dimen/dim_10dp"
                        android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/drivertv"
                            android:textSize="22sp"
                            android:textColor="@android:color/black"
                            android:text="Driver License"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:background="@android:color/transparent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                    />

                    <Button
                        android:id="@+id/driverbanner"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="@dimen/dim_10dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/drivertv"
                        android:background="@drawable/layout_bg"
                        android:text="Uploaded"
                        android:visibility="gone"
                        android:textAllCaps="false"
                        android:textColor="@color/white">

                    </Button>


                    <ImageView
                            android:id="@+id/driverliscenseIV"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/ic_arrow_forward_black_24dp"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_margin="@dimen/dim_10dp"/>

                </RelativeLayout>

                <View
                        android:background="#ffd3d3d3"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"/>
                <RelativeLayout
                        android:id="@+id/vehicleinsurance"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:padding="@dimen/dim_10dp"
                        android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/insurancetv"
                            android:textSize="22sp"
                            android:textColor="@android:color/black"
                            android:text="Vehicle Insurance"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:background="@android:color/transparent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                    />


                    <Button
                        android:id="@+id/insurancebanner"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="@dimen/dim_10dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/insurancetv"
                        android:background="@drawable/layout_bg"
                        android:text="Uploaded"
                        android:visibility="gone"
                        android:textAllCaps="false"
                        android:textColor="@color/white">

                    </Button>


                    <ImageView
                            android:id="@+id/vehicleinsuranceIV"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/ic_arrow_forward_black_24dp"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_margin="@dimen/dim_10dp"/>

                </RelativeLayout>

                <View
                        android:background="#ffd3d3d3"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"/>

                <RelativeLayout
                        android:id="@+id/vehiclepermit"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:padding="@dimen/dim_10dp"
                        android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/permittv"
                            android:textSize="22sp"
                            android:textColor="@android:color/black"
                            android:text="Vehicle Permit"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:background="@android:color/transparent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                    />


                    <Button
                        android:id="@+id/permitbanner"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="@dimen/dim_10dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/permittv"
                        android:background="@drawable/layout_bg"
                        android:text="Uploaded"
                        android:visibility="gone"
                        android:textAllCaps="false"
                        android:textColor="@color/white">

                    </Button>


                    <ImageView
                            android:id="@+id/vehiclepermitIV"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/ic_arrow_forward_black_24dp"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_margin="@dimen/dim_10dp"/>

                </RelativeLayout>


                <View
                        android:background="#ffd3d3d3"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"/>


                <RelativeLayout
                        android:id="@+id/vehicleregistration"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:padding="@dimen/dim_10dp"
                        android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/registeraitontv"
                            android:textSize="22sp"
                            android:textColor="@android:color/black"
                            android:text="Vehicle Registration"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:background="@android:color/transparent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                    />


                    <Button
                        android:id="@+id/registeraitonbanner"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="@dimen/dim_10dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/registeraitontv"
                        android:background="@drawable/layout_bg"
                        android:text="Uploaded"
                        android:visibility="gone"
                        android:textAllCaps="false"
                        android:textColor="@color/white">

                    </Button>



                    <ImageView
                            android:id="@+id/vehicleregistrationIV"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/ic_arrow_forward_black_24dp"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_margin="@dimen/dim_10dp"/>

                </RelativeLayout>


            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
    </RelativeLayout>
</RelativeLayout>
